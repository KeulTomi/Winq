<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="winq.keult.foxplan.hu.winq.ProfileActivity">

    <RelativeLayout
        android:id="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profile_back_points"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_point"
                android:tint="@color/colorAccent" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_point"
                android:tint="@color/colorAccent" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_point"
                android:tint="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_headertime_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:text="2017"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/profile_headertime_month_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05.29"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/header_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_header"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/information_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_line"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_age_of_current_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="19"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/profile_country_of_current_user"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="hun"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/profile_fullname_of_current_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Erdos Mate"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_below="@id/information_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/profile_image_layout_header_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_image"
        android:background="@color/colorAccent" />

    <HorizontalScrollView
        android:id="@+id/profile_image_scroll_layout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/profile_image_layout_header_1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/profile_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_images_01"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_02"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_03"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_04"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_05"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_06"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_07"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_08"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_09"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_10"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_11"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/profile_images_12"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/profile_image_layout_header_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/profile_image_scroll_layout"
        android:background="@color/colorAccent" />

    <HorizontalScrollView
        android:id="@+id/connect_extra_images_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@id/profile_image_scroll_layout"
        android:scrollbars="none"
        android:visibility="gone">


        <LinearLayout
            android:id="@+id/connect_extra_images_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/connect_extra_images_01"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/connect_extra_images_02"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/connect_extra_images_03"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/connect_extra_images_04"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/connect_extra_images_05"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/connect_extra_images_06"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/connect_extra_images_07"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />

            <ImageView
                android:id="@+id/connect_extra_images_08"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/round_for_images" />


        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/profile_image_layout_header_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/connect_extra_images_scrollView"
        android:background="@color/colorAccent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/profile_description"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_below="@id/profile_image_layout_header_2"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:scrollbars="vertical"
        android:text="iDÉJdkjKDkdk..DKdkfjJKDFKGJKDFkj.dbK.hdbADH,JADG,jhagdhdHAGJAGH,A"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/profile_kamera_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profile_description"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/profile_take_photo_button"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="take a photo"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/profile_choose_from_gallery_button"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Choose from gallery"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <Button
        android:id="@+id/profile_logout_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:text="log out"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/profile_settings_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/profile_logout_button"
        android:background="@color/colorPrimary"
        android:text="settings"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/connect_add_as_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="@string/add_as_friend"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/connect_messages_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_above="@+id/connect_add_as_friend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/connect_get_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:src="@drawable/messeges_picto"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/connect_write_message"
            android:layout_width="182dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/write_message"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>

</RelativeLayout>

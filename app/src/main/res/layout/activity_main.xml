<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="winq.keult.foxplan.hu.winq.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_upcoming_events_layout"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_first_upcoming_event"
                android:src="@drawable/upcoming_event"
                android:scaleType="centerCrop" />


             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:background="#b9149399"
                 android:paddingTop="6dp"
                 android:paddingBottom="6dp">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/main_first_upc_event_name"
                     android:text="sziget fesztivál"
                     android:textAllCaps="true"
                     android:textSize="16sp"
                     android:textStyle="bold"
                     android:textColor="@android:color/white"
                     android:layout_marginLeft="20dp"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/main_first_upc_event_city"
                     android:text="Budapest"
                     android:layout_alignParentRight="true"
                     android:textSize="16sp"
                     android:textColor="@android:color/white"
                     android:layout_marginRight="50dp"/>

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:id="@+id/main_first_upc_event_country"
                     android:text="/HUN/"
                     android:textSize="8sp"
                     android:layout_centerVertical="true"
                     android:layout_alignParentRight="true"
                     android:layout_marginTop="2dp"
                     android:layout_marginRight="10dp"
                     android:textColor="@android:color/white"/>

             </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/main_second_upcoming_event"
                android:src="@drawable/upcoming_event"
                android:scaleType="centerCrop" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/second_upcoming_texts_layout"
                android:layout_alignParentBottom="true"
                android:background="#b9149399"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_second_upc_event_name"
                    android:text="sziget fesztivál"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_second_upc_event_city"
                    android:text="Budapest"
                    android:textSize="16sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="50dp"/>

                <TextView
                    android:id="@+id/main_second_upc_event_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/HUN/"
                    android:textColor="@android:color/white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:textSize="8sp" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#adffffff">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/edrr"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_upcoming_events_layout"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/main_button_explore"
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:background="#00b3c2"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_favorite_border_black_24dp"
                        android:tint="@android:color/white" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="explore"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="22sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:background="#2dbbc7"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:tint="@android:color/white"
                        android:src="@drawable/ic_connect" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="connect"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="22sp" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12.5dp"
                android:layout_marginBottom="12.5dp"
                android:layout_marginLeft="182dp"
                android:background="@android:color/black"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/black"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="#58c2cf">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_events"
                        android:tint="@android:color/white"
                        android:layout_centerHorizontal="true"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="events"
                        android:textAllCaps="true"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:background="#85c9d4"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:tint="@android:color/white"
                        android:src="@drawable/ic_profile" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="profile"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="22sp" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="12.5dp"
                android:layout_marginBottom="12.5dp"
                android:layout_marginLeft="182dp"
                android:background="@android:color/black"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

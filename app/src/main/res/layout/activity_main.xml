<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="winq.keult.foxplan.hu.winq.MainActivity">

    <LinearLayout
        android:id="@+id/main_upcoming_events_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_first_upcoming_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/upcoming_event" />


             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:background="#b9149399"
                 android:paddingBottom="18px"
                 android:paddingTop="18px">

                 <TextView
                     android:id="@+id/main_first_upc_event_name"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="60px"
                     android:text="sziget fesztivál"
                     android:textAllCaps="true"
                     android:textColor="@android:color/white"
                     android:textSize="43px"
                     android:textStyle="bold" />

                 <TextView
                     android:id="@+id/main_first_upc_event_city"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_marginRight="150px"
                     android:text="Budapest"
                     android:textColor="@android:color/white"
                     android:textSize="43px" />

                 <TextView
                     android:id="@+id/main_first_upc_event_country"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="30px"
                     android:layout_marginTop="6px"
                     android:text="/HUN/"
                     android:textColor="@android:color/white"
                     android:textSize="21px" />

             </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_second_upcoming_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/upcoming_event" />


            <RelativeLayout
                android:id="@+id/second_upcoming_texts_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#b9149399"
                android:paddingBottom="18px"
                android:paddingTop="18px">

                <TextView
                    android:id="@+id/main_second_upc_event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60px"
                    android:text="sziget fesztivál"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="43px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_second_upc_event_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="150px"
                    android:text="Budapest"
                    android:textColor="@android:color/white"
                    android:textSize="43px" />

                <TextView
                    android:id="@+id/main_second_upc_event_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="6px"
                    android:text="/HUN/"
                    android:textColor="@android:color/white"
                    android:textSize="21px" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/main_upcoming_events_layout"
            android:layout_weight="0.95"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/main_menu_upper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/menu_upper_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/main_button_explore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00b3c2"
                        android:paddingBottom="30px"
                        android:paddingTop="30px">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_favorite_border_black_24dp"
                            android:tint="@android:color/white" />

                        <TextView
                            android:id="@+id/main_button_explore_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="explore"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="60px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_button_connect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#2dbbc7"
                        android:paddingBottom="30px"
                        android:paddingTop="30px">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_connect"
                            android:tint="@android:color/white" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="connect"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="60px" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="37.5px"
                    android:layout_marginTop="37.5px"
                    android:background="@android:color/black" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@android:color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/main_button_events"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#58c2cf"
                        android:paddingBottom="30px"
                        android:paddingTop="30px">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_events"
                            android:tint="@android:color/white" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="events"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="60px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_button_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#85c9d4"
                        android:paddingBottom="30px"
                        android:paddingTop="30px">

                        <ImageView
                            android:layout_width="150px"
                            android:layout_height="150px"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_profile"
                            android:tint="@android:color/white" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="profile"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="60px" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="37.5px"
                    android:layout_marginTop="37.5px"
                    android:background="@android:color/black" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#adffffff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="90px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15px"
            android:layout_marginTop="15px"
            android:src="@drawable/edrr" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="4px"
            android:background="@android:color/black" />

    </LinearLayout>
</RelativeLayout>

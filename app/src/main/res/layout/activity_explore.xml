<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/explore_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="winq.keult.foxplan.hu.winq.ExploreActivity">
    <RelativeLayout
        android:id="@+id/explore_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/explore_back_points"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_centerVertical="true"
            android:paddingLeft="65px">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_point"
                android:tint="@color/colorAccent" />

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_point"
                android:tint="@color/colorAccent" />

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_point"
                android:tint="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/explore_headertime_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15px"
                android:text="2017"
                android:textColor="@android:color/black"
                android:textSize="40px" />

            <TextView
                android:id="@+id/explore_headertime_month_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05.29"
                android:textColor="@android:color/black"
                android:textSize="40px" />

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/header_line"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_below="@+id/explore_header"
        android:background="@android:color/black"/>

    <LinearLayout
        android:id="@+id/information_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_line"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/explore_age_of_current_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="120px"
            android:layout_marginRight="30px"
            android:layout_marginTop="15px"
            android:text="19"
            android:textColor="@android:color/white"
            android:textSize="55px" />

        <TextView
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:layout_marginBottom="15px"
            android:layout_marginTop="15px"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/explore_country_of_current_user"
            android:layout_width="230px"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="15px"
            android:text="hun"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="55px" />

        <TextView
            android:layout_width="3px"
            android:layout_height="match_parent"
            android:layout_marginBottom="15px"
            android:layout_marginTop="15px"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/explore_fullname_of_current_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="15px"
            android:text="Erdos Mate"
            android:textColor="@android:color/white"
            android:textSize="55px" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/user_galery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/information_bar">

        <ImageSwitcher
            android:id="@+id/explore_current_user_picture"
            android:layout_width="match_parent"
            android:layout_height="1150px" />

        <ImageView
            android:id="@+id/explore_like"
            android:layout_width="125px"
            android:layout_height="250px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="450px"
            android:src="@drawable/explore_like" />

        <ImageView
            android:id="@+id/explore_dont_like"
            android:layout_width="125px"
            android:layout_height="250px"
            android:layout_alignParentRight="false"
            android:layout_marginTop="450px"
            android:src="@drawable/explore_dont_like" />

    </RelativeLayout>

    <TextView
        android:id="@+id/explore_current_user_intrest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_galery"
        android:background="@color/colorPrimary"
        android:text="Kávé pia haverok"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="70px"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/explore_current_user_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/explore_current_user_intrest"
        android:padding="30px"
        android:text="iDÉJdkjKDkdk..DKdkfjJKDFKGJKDFkj.dbK.hdbADH,JADG,jhagdhdHAGJAGH,A"
        android:textColor="@android:color/black"
        android:textSize="42px" />

</RelativeLayout>

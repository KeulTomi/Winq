<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="winq.keult.foxplan.hu.winq.ExploreActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/explore_header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:id="@+id/explore_back_points"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_back_point"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorAccent"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_back_point"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorAccent"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_back_point"
                android:layout_gravity="center_vertical"
                android:tint="@color/colorAccent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/explore_headertime_year"
                android:text="2017"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/explore_headertime_month_day"
                android:text="05.29"
                android:textSize="15sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/header_line"
        android:layout_below="@+id/explore_header"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/information_bar"
        android:layout_below="@+id/header_line"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/explore_age_of_current_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="19"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/explore_country_of_current_user"
            android:text="hun"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/explore_fullname_of_current_user"
            android:text="Erdos Mate"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_galery"
        android:layout_below="@+id/information_bar">

        <ImageSwitcher
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:id="@+id/explore_current_user_picture"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/explore_like"
            android:src="@drawable/explore_like"
            android:layout_alignParentRight="true"
            android:layout_marginTop="170dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/explore_dont_like"
            android:src="@drawable/explore_dont_like"
            android:layout_alignParentRight="false"
            android:layout_marginTop="170dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/explore_current_user_intrest"
        android:layout_below="@+id/user_galery"
        android:text="Kávé pia haverok"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:background="@color/colorPrimary"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/explore_current_user_intrest"
        android:id="@+id/explore_current_user_description"
        android:padding="10dp"
        android:text="iDÉJdkjKDkdk..DKdkfjJKDFKGJKDFkj.dbK.hdbADH,JADG,jhagdhdHAGJAGH,A"
        android:textColor="@android:color/black"
        android:textSize="15sp"/>

</RelativeLayout>

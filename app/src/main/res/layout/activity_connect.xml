<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="winq.keult.foxplan.hu.winq.EventsActivity">

    <RelativeLayout
        android:id="@+id/connect_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/connect_back_points"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:paddingLeft="25dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_point"
                android:tint="@color/colorAccent" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_point"
                android:tint="@color/colorAccent" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_back_point"
                android:tint="@color/colorAccent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/connect_headertime_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:text="2017"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/connect_headertime_month_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05.29"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/connect_search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#777777"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/connect_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="49.5dp"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:hint="Search..."
            android:inputType="textNoSuggestions"
            android:textSize="18sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/header_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/connect_header"
        android:background="@android:color/black" />

    <LinearLayout
        android:id="@+id/connect_tab_bar"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/header_line"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/tab_bar_border_big"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/connect_joined"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="#777777"
            android:gravity="center_vertical"
            android:text="Friends"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/connect_upcoming"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="@drawable/tab_bar_border_big"
            android:gravity="center_vertical"
            android:text="Winqs"
            android:textAlignment="center"
            android:textColor="#777777" />

        <TextView
            android:id="@+id/connect_search"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Search"
            android:textAlignment="center"
            android:textColor="#777777" />

    </LinearLayout>

    <GridView
        android:id="@+id/connect_list"
        android:layout_width="330dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/connect_tab_bar"
        android:layout_centerHorizontal="true"
        android:numColumns="auto_fit"
        android:scrollbars="none"
        tools:listitem="@layout/connect_list_item" />

    <ProgressBar
        android:id="@+id/connect_list_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/connect_no_result_sad_picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:src="@drawable/no_result_sad_emoji"
        android:visibility="gone" />

    <TextView
        android:id="@+id/connect_no_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect_no_result_sad_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Nincs talÃ¡lat"
        android:textSize="30sp"
        android:visibility="gone" />

</RelativeLayout>

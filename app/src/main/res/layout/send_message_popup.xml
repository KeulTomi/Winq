<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="240dp"
    android:background="@drawable/message_popup_border"
    android:orientation="vertical">

    <EditText
        android:id="@+id/send_message_popup_editText"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@null"
        android:gravity="top"
        android:hint="Write some message..."
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:id="@+id/send_messages_popup_button_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="3dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/send_message_popup_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="cancel"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/send_message_popup_send_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="send"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>